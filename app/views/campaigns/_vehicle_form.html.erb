<div class="vehicle-form-wrapper">

  <%= form_for(@new_vehicle, :html => {:class => "vehicle"}) do |f| %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, :class => "vehicle-input" %>
    </div>
    <div class="field">
      <%= f.label :info_link %><br />
      <%= f.text_field :info_link, :class => "vehicle-input" %>
    </div>
    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description, :class => "vehicle-input" %>
    </div>
    <div class="field policy-maker-image-upload">
      <%= f.label :logo_image %><br />
      <%= f.file_field :logo_image %>
    </div>
  
    <div class="actions">
      <%= f.submit "Create Vehicle", :class => "create-vehicle-button" %>
    </div>
  
  <% end %>
  
</div>