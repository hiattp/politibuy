<div class="edit-form-wrapper">
  <%= form_for(@campaign, :html => {:id => "campaign-form", :multipart => true}) do |f| %>
    <% if @campaign.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@campaign.errors.count, "error") %> prohibited this campaign from being saved:</h2>

        <ul>
        <% @campaign.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :objective %><br />
      <%= f.text_field :objective %>
    </div>
    
    <div class="field">
      <%= f.label :campaign_image %><br />
      <%= f.file_field :main_image %>
    </div>
    
    <div class="field">
      <%= f.label :deadline %><br />
      <%= f.datetime_select :deadline %>
    </div>
    <div class="field">
      <%= f.label :live %><br />
      <%= f.check_box :live %>
    </div>
    <div class="form-edit-actions">
      <% if @updating %>
        <%= f.submit "Update Campaign", :class => "edit-form-button" %>
        <%= link_to 'Destroy Campaign', @campaign, method: :delete, data: { confirm: 'Are you sure?' }, :class => "delete-button" %>
      <% else %>
        <%= f.submit "Create Campaign", :class => "edit-form-button" %>
      <% end %>
    </div>
  <% end %>
</div>