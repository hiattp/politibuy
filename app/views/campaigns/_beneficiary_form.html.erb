<div class="new-recipient-form-wrapper">
<%= form_for([@campaign,@new_beneficiary], :html => {:class => "new-recipient-form"}) do |f| %>

  <%= f.hidden_field :campaign_id, :value => @campaign.id %>
  
  <div class="field">
    <%= f.label :new_vehicle, :class => "new-recipient-select-label" %>
    <% if @vehicle_selections.count > 0 %>
    <%= f.select :vehicle_id, @vehicle_selections %>
    <% else %>
    <span><i>(No vehicles found)</i></span>
    <% end %>
  </div>  

  <div class="field new-recipient-reason">
    <%= f.label :reason %><br />
    <%= f.text_field :reason %>
  </div>
  
  <div class="actions">
    <%= f.submit "Add Beneficiary", :class => "create-recipient-submit" %>
  </div>
  
<% end %>
</div>