<div class="new-recipient-form-wrapper">
<%= form_for([@campaign,@new_key_policy_maker], :html => {:class => "new-recipient-form"}) do |f| %>

  <%= f.hidden_field :campaign_id, :value => @campaign.id %>
  
  <div class="field">
    <%= f.label :new_policy_member, :class => "new-recipient-select-label" %>
    <% if @policy_makers_selections.count > 0 %>
    <%= f.select :policy_maker_id, @policy_makers_selections %>
    <% else %>
    <span><i>(No policy makers found)</i></span>
    <% end %>
  </div>  

  <div class="field new-recipient-reason">
    <%= f.label :reason %><br />
    <%= f.text_field :reason %>
  </div>
  
  <div class="actions">
    <%= f.submit "Add Key Policy Maker", :class => "create-recipient-submit" %>
  </div>
  
<% end %>
</div>