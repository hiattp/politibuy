<div class="update-form-wrapper">
  <%= form_for([@campaign, update], :html => {:class => "update-form"}) do |f| %>

    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :reference_url %><br />
      <%= f.text_field :reference_url %>
    </div>
    <div class="field">
      <%= f.label :preview %><br />
      <%= f.text_area :preview %>
    </div>
    <div class="field">
      <%= f.label :published_date %><br />
      <%= f.date_select :published_date %>
    </div>

    <%= f.submit "Add/Edit Update", :class => "edit-form-button" %>

  <% end %>
</div>