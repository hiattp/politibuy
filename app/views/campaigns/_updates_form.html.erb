<div class="update-form-wrapper <%= index == @campaign.updates.count ? "last-update-form" : "" %>">
  
  <%= form_for([@campaign, update], :html => {:class => "update-form"}) do |f| %>

    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :reference_url %><br />
      <%= f.text_field :reference_url %>
    </div>
    <div class="field">
      <%= f.label :long_preview %><br />
      <%= f.text_area :long_preview %>
    </div>
    <div class="field">
      <%= f.label :published_date %><br />
      <%= f.date_select :published_date %>
    </div>

    <%= f.submit "Add/Edit Update", :class => "edit-form-button" %>

  <% end %>
  
</div>